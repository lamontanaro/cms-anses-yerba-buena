<% if notice %>
 <div class="alert alert-success" role="alert">
   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
     <span aria-hidden="true">&times;</span>
   </button>
   <%= notice %>
 </div>
<% end %>

<section>
  <div class="container">
    <div class="row">
      <div class="tab-content" style="width: 100%;">
        <h1>Datos del Turno</h1>
        <table>
          <thead>
            <tr>
              <th><strong>Numero</strong></th>
              <th><strong>Nombre y Apellido</strong></th>
              <th><strong>Fecha</strong></th>
              <th><strong>Hora</strong></th>
              <th><strong>Sucursal</strong></th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td>
                  <span><%= @turn.number %></span>
                </td>
                <td>
                  <span><%= @turn.person.full_name%></span>
                </td>
                <td>
                  <span><%= @turn.turn_date%></span>
                </td>
                <td>
                  <span><%= @turn.turn_time%></span>
                </td>
                <td>
                  <span><%= @turn.place%></span>
                </td>
                <td>
                  <%= link_to 'Editar', edit_turn_path(@turn) %>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
      <!--end of items-->
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>
