<% if notice %>
 <div class="alert alert-success" role="alert">
   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
     <span aria-hidden="true">&times;</span>
   </button>
   <%= notice %>
 </div>
<% end %>

<div class="tab-content">
  <h1> Expedientes</h1>

  <table>
    <thead>
      <strong>
        <tr>
          <th>Numero</th>
          <th>Nombre y Apellido</th>
          <th>Descripcion</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>        
      </strong>
    </thead>

    <tbody>
      <% @dockets.each do |docket| %>
        <tr>
          <td><%= docket.number %></td>
          <td><%= docket.person.full_name %></td>
          <td><%= docket.description %></td>
          <td>
            <span class= "badge <%= docket.states %>" >
              <%= docket.states %>
            </span>
          </td>
          <td><%= link_to 'Ver', docket_path(docket) %></td>
          <td><%= link_to 'Editar', edit_docket_path(docket) %></td>
          <td><%= link_to 'Eliminar', docket_path(docket),method: :delete, data: { confirm: '¿Estás seguro?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Nuevo', new_docket_path %>
